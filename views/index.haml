%h2.text-center#question
  How is it going?
%ul.small-block-grid-1
  %li
    %a.large.button.expand.success#up awesome
  %li
    %a.large.button.expand.alert#down bummer

#resultmodalpositive.reveal-modal
  %h2 Awesome.
  %p.lead Thank you for your participation.
  %a.close-reveal-modal ×

#resultmodalnegative.reveal-modal
  %h2 Bummer.
  %p.lead Thank you for your participation.
  %a.close-reveal-modal ×

#editmodal.reveal-modal
  %h2 What's your name?
  %form#editnameform
    %input#editname{:name => "editname", :type => "text", :value => @account ? @account.name : "" }
    %a.small.button#editsave{:href=>""} Save
  %a.close-reveal-modal ×

#logoutmodal.reveal-modal
  %h2 Attention!
  %p.lead
    To come back you need the following URL:
    %b
      = request.url
  %p
    %a.small.alert.button#logout{:href=>"/logout"} Proceed logout
  %a.close-reveal-modal ×


